# Baixando o modelo de linguagem em inglÃªs
import spacy.cli
spacy.cli.download("en_core_web_sm")

# Carregando o modelo
import spacy
nlp = spacy.load("en_core_web_sm")

# Texto de exemplo
texto = "Apple is looking at buying U.K. startup for $1 billion"

# Processando o texto
doc = nlp(texto)

# Exibindo tokens, POS e dependÃªncias
for token in doc:
    print(f"TOKEN: {token.text}, POS: {token.pos_}, MORFOLOGIA: {token.morph}, DEP: {token.dep_}")
ðŸ“— Notebook 2: ner.ipynb â€” Reconhecimento de Entidades (NER)
python
Copiar
Editar
# InstalaÃ§Ã£o das bibliotecas necessÃ¡rias
!pip install spacy
!pip install pandas
!pip install beautifulsoup4

# Baixando o modelo em inglÃªs
import spacy.cli
spacy.cli.download("en_core_web_sm")

# ImportaÃ§Ãµes
import spacy
import pandas as pd
from bs4 import BeautifulSoup
from spacy import displacy

# Carregando o modelo
nlp = spacy.load("en_core_web_sm")

# Texto de exemplo
texto = "Barack Obama was born in Hawaii. He was elected president in 2008."

# Processando o texto
doc = nlp(texto)

# Exibindo entidades
for ent in doc.ents:
    print(ent.text, ent.label_)

# Visualizando entidades
displacy.render(doc, style="ent", jupyter=True)

# Transformando em DataFrame
dados = [(ent.text, ent.label_) for ent in doc.ents]
df = pd.DataFrame(dados, columns=["Entidade", "Tipo"])
print(df)
